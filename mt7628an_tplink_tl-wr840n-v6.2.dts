/dts-v1/;

#include "mt7628an.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "tplink,tl-wr840n-v6.2", "mediatek,mt7628an-soc";
	model = "TP-Link TL-WR840N v6.2";

	aliases {
		led-boot = &led_power_orange;
                led-failsafe = &led_power_green;
                led-running = &led_power_green;
                led-upgrade = &led_power_orange;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 38 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	/* LED used is dual-color,dual lead LED */
        leds {
                compatible = "gpio-leds";

                lan {
                        label = "tl-wr840n-v6.2:green:lan";
                        gpios = <&gpio 39 GPIO_ACTIVE_LOW>;
                };

                wlan {
                        label = "tl-wr840n-v6.2:green:wlan";
                        gpios = <&gpio 44 GPIO_ACTIVE_LOW>;
                };

                led_power_green: power {
                        label = "tl-wr840n-v6.2:green:power";
                        gpios = <&gpio 42 GPIO_ACTIVE_HIGH>;

                };

                led_power_orange: wan {
                        label = "tl-wr840n-v6.2:orange:wan";
                        gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
                };

        };

};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			partition@20000 {
				compatible = "tplink,firmware";
				label = "firmware";
				reg = <0x20000 0x3e0000>;
			};

			factory: partition@3f0000 {
				label = "factory";
				reg = <0x3f0000 0x10000>;
				read-only;
			};
		};
	};
};

&ehci {
	status = "disabled";
};

&ohci {
	status = "disabled";
};

&wmac {
	status = "okay";
	mtd-mac-address = <&factory 0xf100>;
};

&ethernet {
	mtd-mac-address = <&factory 0xf100>;
};


&esw {
       	mediatek,portmap = <0x3e>;
};

&state_default {
        gpio {
                groups = "p1led_an", "p3led_an", "p4led_an", "wled_an", "perst", "wdt";
                function = "gpio";
        };
};
